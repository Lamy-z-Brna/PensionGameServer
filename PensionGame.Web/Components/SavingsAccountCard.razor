@using PensionGame.Common.Extensions

@if (SavingsAccountData != null)
{
    <Card>
        <div class="row">
            <div class="col-md-6 text-md-start">
                <h3 class="card-title mb-4">Savings account <Tooltip Text="@SavingsAccountInfo"><InfoIcon /></Tooltip></h3>
            </div>
            <div class="col-md-6 text-md-end">
                <h2>
                    <Tooltip Text="Savings account value held"><SignedInt Value="@SavingsAccountValue" /></Tooltip>
                </h2>
            </div>
        </div>
        <div class="row text-md-end">
            <div class="input-group text-md-end mb-3">
                <div class="input-group-prepend">
                    <DepositWithdrawButton OnPositionChanged="HandleDepositWithdrawButton" />
                </div>
                <Tooltip Text="Transaction value">
                    <input type="number" placeholder="Transaction Value" @bind="@TransactionValue" min="0" step="1" @oninput="HandleTransactionValueChange">
                </Tooltip>
            </div>
        </div>
        <InterestRateLine InterestRate="@SavingsAccountRate" />
        <div class="row text-md-end">
            <h2>
                <Tooltip Text="Savings account value after transaction">
                    <SignedInt Value="@(AfterTransactionValue ?? 0)" />
                </Tooltip>
            </h2>
        </div>
    </Card>
}