<div class="pf-c-expandable-section">
    <button type="button"
            class="pf-c-expandable-section__toggle"
            aria-expanded="@(!Collapsed)">
        @if (Collapsed)
        {
            <span @onclick="@Toggle" class="pf-c-expandable-section__toggle-text">Show more</span>
        }
        else
        {
            <span @onclick="@Toggle" class="pf-c-expandable-section__toggle-text">Show less</span>
        }
    </button>
    @if (Collapsed)
    {
        <div class="pf-c-expandable-section__content" hidden>@ChildContent</div>}
    else
    {
<div class="pf-c-expandable-section__content">@ChildContent</div>
    }
</div>