@page "/newsession"
@using PensionGame.Web.Services
@using PensionGame.Web.Data
@using PensionGame.Api.Domain.Resources.Session

@inject SessionDataServices SessionService
@inject Microsoft.AspNetCore.Components.NavigationManager navigationManager


<h1>New game session!</h1>

<EditForm EditContext="@editContext" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <p>
        <label>
            Game Session Name:
        </label>
        <div>
            <InputText @bind-Value="session.Name" style="width: 400px" />
        </div>
    </p>
    <p>
        <label>
            Income:
        </label>
        <div>
            <InputNumber @bind-Value="session.Income" />
        </div>
    </p>
    <p>
        <label>
            Expenses:
        </label>
        <div>
            <InputNumber @bind-Value="session.Expenses" />
        </div>
    </p>
    <p>
        <label>
            Age:
        </label>
        <div>
            <InputNumber @bind-Value="session.Year" />
        </div>
    </p>
    <p>
        <label>
            Retirement age:
        </label>
        <div>
            <InputNumber @bind-Value="session.RetirementYear" />
        </div>
    </p>

    <button type="submit">Submit</button>
</EditForm>

