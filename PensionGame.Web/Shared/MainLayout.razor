@inherits LayoutComponentBase

<div class="wrapper">
    <NavMenu NavMenuCssClass="@NavMenuCssClass" />

    
    <div class="main">
        <NavBar CollapseMenuCallback="@ToggleNavMenu" />

        <main class="content">
            @Body
        </main>

        <Footer />
    </div>
</div>

@code {

    private bool collapseNavMenu = false;

    //private string NavMenuCssClass => collapseNavMenu ? "collapse" : string.Empty;
    private string NavMenuCssClass => collapseNavMenu ? "collapsed" : string.Empty;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;

        StateHasChanged();
    }
}